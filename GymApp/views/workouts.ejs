<!DOCTYPE html>
<html lang="en">
<head>
    <title>GymApp - Workout Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-5">
        <h1>Workout List</h1>
        <ul class="list-group">
            <% workouts.forEach(workout => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= workout.name %></strong> (<%= workout.type %>)
                        - <%= workout.sets %> sets, <%= workout.reps %> reps, <%= workout.restTime %> seconds rest
                    </div>
                    <div>
                        <a href="/workouts/edit/<%= workout._id %>" class="btn btn-warning btn-sm">
                            Edit <i class="fas fa-edit"></i>
                        </a>
                        <form action="/workouts/delete/<%= workout._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>

        <h2 class="mt-5">Add a New Workout</h2>
        <form action="/workouts" method="POST">
            <div class="mb-3">
                <label class="form-label">Name:</label>
                <input type="text" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Type:</label>
                <input type="text" name="type" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Sets:</label>
                <input type="number" name="sets" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Reps:</label>
                <input type="number" name="reps" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Rest Time (seconds):</label>
                <input type="number" name="restTime" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">
                Add Workout <i class="fas fa-plus"></i>
            </button>
        </form>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
